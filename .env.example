# MEV Liquidation Phase A - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SAFE_MODE CONFIGURATION (REQUIRED)
# =============================================================================
# SAFE_MODE must be "true" for Phase A - enforces testnet/fork-only execution
SAFE_MODE=true

# =============================================================================
# RPC CONFIGURATION
# =============================================================================
# Arbitrum RPC URL (Alchemy, Infura, or local fork)
# For Phase A, use testnet or forked mainnet only
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Optional: Arbitrum Sepolia testnet for additional testing
ARBITRUM_TESTNET_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# =============================================================================
# SIMULATION PARAMETERS
# =============================================================================
# Maximum EV cap per simulation (in ETH) - safety limit
MAX_EV_CAP_ETH=1.0

# Number of stochastic bots for simulation
NUM_STOCHASTIC_BOTS=10

# Default random seed for reproducibility
DEFAULT_RANDOM_SEED=42

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log directory (relative to project root)
LOG_DIR=logs

# =============================================================================
# PRIVATE KEY (TESTNET ONLY - NEVER USE MAINNET KEYS)
# =============================================================================
# Only used for testnet dry-run simulations
# NEVER put mainnet private keys here
# TESTNET_PRIVATE_KEY=0x...
